@import "mixins.css.sass"

body, html
  margin: 0
  padding: 0
  font-family: "Helvetica Neue", Helvetica, Arial
  font-size: 13px
  color: #303533
  line-height: 1.1
  background: url(<%= asset_path "bg.png" %>) repeat
  -webkit-font-smoothing: antialiased

.button
  +gradient(#f0f5f3,#e9eeec)
  display: inline-block
  border: 1px solid #c9d6d0
  border-bottom: 1px solid #adb8b2
  box-shadow: inset 0 1px 0 #fff, 0 2px 2px rgba(0,0,0,.2)
  color: #444
  text-shadow: 0 -1px 0 #fff
  font-size: 13px
  text-align: center
  padding: 9px 13px
  border-radius: 3px
  text-decoration: none
  font-weight: 500
  cursor: pointer
  &:hover
    +gradient(#fff,#f0f4f2)
    border: 1px solid #ccd9d4
    border-bottom: 1px solid #b2bbb5
    color: #555
  &:active
    margin-top: 1px
    box-shadow: inset 0 1px 0 #fff, 0 1px 1px rgba(0,0,0,.2)

.button.darkShadow
  box-shadow: inset 0 1px 0 #fff, 0 2px 2px rgba(0,0,0,.4)
  &:active
    box-shadow: inset 0 1px 0 #fff, 0 1px 1px rgba(0,0,0,.4)


.whiteCard
  background: #fff
  border: 1px solid #cfddd6
  border-bottom: 1px solid #c0cfc8
  box-shadow: 0 1px 2px rgba(0,0,0,.08)
  padding: 14px
  border-radius: 5px

.whiteCard.onStream
  width: 180px

  .imgContainer
    display: block
    position: relative
    overflow: hidden
    border-radius: 3px

    img
      width: 180px
      border-radius: 3px

    h3.name
      white-space: nowrap
      text-overflow: ellipsis
      color: white
      font-weight: 400
      font-size: 20px
      padding: 8px 12px
      position: absolute
      bottom: 0
      background: rgba(0, 0, 0, .7)
      left: 0
      right: 0

  p.userDescription
    font-size: 14px
    padding: 0
    margin: 12px 0 0 0

.darkCard
  background: #f8fbf9
  border: 1px solid #d1ded7
  border-bottom: 1px solid #bac3bf
  box-shadow: 0 1px 2px rgba(0,0,0,.08)
  color: #313534
  overflow: hidden
  border-radius: 5px


  .listItem
    padding: 9px
    position: relative
    border-top: 1px solid #e0e8e3
    box-shadow: 0 -1px 0 rgba(255,255,255,.9)

    img
      position: absolute
      top: 9px
      left: 9px
      border: 1px solid #cccecd
      width: 26px
      height: 26px
      border-radius: 3px

    .img.noBorder
      border: none

    h4.title
      font-weight: bold
      font-size: 12px
      display: block
      margin: 0 0 4px

    p.description
      font-weight: normal
      font-size: 12px
      display: block
      margin: 0

    .withImage
      h4.title, p.description
        margin-left: 38px

.darkCard.compressSides
  margin-left: 6px
  margin-right: 6px
  border-top-left-radius: 0
  border-top-right-radius: 0
  box-shadow: inset 0 1px 2px rgba(0,0,0,.18)
  border-top: none

